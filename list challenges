nums = []

nums.append(input("Enter number1"))
nums.append(input("Enter number2"))
nums.append(input("Enter number3"))

print(nums)

ask = str(input("Do you want to keep the last number you entered?"))

if ask == "no":
  del nums[2]
  print(nums)
  
else:
  print(nums)



