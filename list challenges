party = "yes"
names = []


while party == "yes":
  names.append(input("Enter a name >>>>>"))
  names.append(input("Enter another name >>>"))
  names.append(input("Enter another >>>>"))
  party1 = str(input("Do you want to invite another?"))
  if party1 == "no":
    party = "no"
    
else:
  party == "yes" 



val = len(names)

print ("you have invited", val, "people")
