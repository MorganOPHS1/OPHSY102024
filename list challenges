food = []

food.append(input("enter food1"))
food.append(input("enter food2"))
food.append(input("enter food3"))
food.append(input("enter food4"))


print(food)

delf = int(input("Choose the number of a food you want to delete e.g 2 will delete chips"))


del food [delf-1]

print(food)
