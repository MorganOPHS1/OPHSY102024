tvshow1 = "The simpsons"
tvshow2 = "Spongebob"
tvshow3 = "Family guy"
tvshow4 = "TWD"

shows = [tvshow1, tvshow2, tvshow3, tvshow4]

print(tvshow1)
print(tvshow2)
print(tvshow3)
print(tvshow4)
print("")


newshow = str(input("Enter a new show"))
place = int(input("Enter the position you want your show to be in"))

shows.insert(place-1, newshow)

print(shows)

